# Sourcing Supply Chain Net - Environment Configuration

# Database
DATABASE_URL=postgresql://username:password@localhost:5433/sscn_db
DATABASE_URL_TEST=postgresql://username:password@localhost:5433/sscn_test_db

# Application
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# LinkedIn API
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=http://localhost:3100/auth/linkedin/callback

# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@sscn.com

# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=sscn-documents
AWS_REGION=us-east-1

# Redis
REDIS_URL=redis://localhost:6380/0

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9201

# Pusher (Real-time)
PUSHER_APP_ID=your-pusher-app-id
PUSHER_KEY=your-pusher-key
PUSHER_SECRET=your-pusher-secret
PUSHER_CLUSTER=us2

# Third-party APIs
CLEARBIT_API_KEY=your-clearbit-api-key
HUNTER_API_KEY=your-hunter-api-key
ZOOMINFO_API_KEY=your-zoominfo-api-key

# Sentry
SENTRY_DSN=your-sentry-dsn

# Development
DEBUG=True
ENVIRONMENT=development
LOG_LEVEL=INFO

# CORS
ALLOWED_ORIGINS=http://localhost:3100,http://127.0.0.1:3100

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000